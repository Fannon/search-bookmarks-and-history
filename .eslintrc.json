{
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "browser": true,
    "es2021": true,
    "webextensions": true,
    "cypress/globals": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": ["cypress"],
  "globals": {
    "module": "writable",
    "ext": "writable",
    "Tagify": "readonly",
    "Mark": "readonly",
    "JSON5": "readonly",
    "FlexSearch": "readonly"
  },
  "ignorePatterns": ["**/lib/*.js"],
  "rules": {
    "no-console": "off",
    "semi": ["warn", "never"],
    "comma-dangle": ["warn", "only-multiline"]
  }
}
